
---
# Build one page per tag (same as Hylia, just our layout)
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
permalink: /tags/{{ tag | slug }}/index.html
layout: layouts/base.njk
title: Posts filed under “{{ tag }}”
---

{# Compact hero to match Blog #}
<section class="hero hero--compact hero--image">
  <img
    class="hero-media"
    src="/images/blog-hero-1600x360.webp"
    srcset="/images/blog-hero-1600x360.webp 1600w, /images/blog-hero-2400x540.webp 2400w"
    sizes="100vw"
    alt=""
    loading="eager"
    decoding="async"
  />
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1>{{ tag }}</h1>
    <p>Posts in this topic</p>
  </div>
</section>

<div class="wrapper">
  {% set posts = collections[tag] | reverse %}
  {% include "partials/components/post-grid.njk" %}
</div>
